<%= javascript_tag do %>
    var GROUP_CODE = '<%= @group.code %>';
    var USER_CHANNEL = '<%= Broadcaster.full_channel(Broadcaster::USER_CHANNEL, @group.code)%>';
    var START_CHANNEL = '<%= Broadcaster.full_channel(Broadcaster::START_CHANNEL, @group.code) %>';
<% end %>
<h1>Main app</h1>
<div>
  <%= flash[:notice] %>
</div>
<div>
 User count: <span id="user-count"><%= @user_count %></span>
</div>
<div>
  Users submitted: <span id="user-submitted">0</span>
</div>
Current user session id: <%= session[:current_user_id] %>
<%= form_tag app_path, method: 'patch'  do  %>
    <table>
      <% @group.restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.id %></td>
            <td><%= label_tag restaurant.id, restaurant.name %></td>
            <td><%= check_box_tag 'id[]', restaurant.id, false, id: restaurant.id %></td>
           <td>User votes: <%= restaurant.user_votes %></td>
          </tr>
      <% end %>
    </table>
    <%= submit_tag 'Finish' %>
<% end %>