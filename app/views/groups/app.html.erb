<%= javascript_tag do %>
    var GROUP_CODE = '<%= @group.code %>';
    var USER_CHANNEL = '<%= Broadcaster.full_channel(Broadcaster::USER_CHANNEL, @group.code)%>';
    var START_CHANNEL = false;
<% end %>

<div class="row valign-wrapper">
  <div class="col s6">
    <p class="grey-text" style="margin-bottom:0px">Restaurants near</p>
    <h5 class="grey-text" style="margin-top:0px"><%= @group.location %></h5>
  </div>
  <div class="col s6 right-align">
    <%= render 'user_count' %>
  </div>
</div>

<!-- TODO filter closed -->
<ul class="collapsible popout" data-collapsible="accordion">
  <% @group.restaurants.each do |restaurant| %>
      <li class="dismissable collection-item restaurant-entry" data-id="<%= restaurant.id %>">
        <div class="collapsible-header">
          <div class="no-margin row valign-wrapper">
            <div class="no-line-height col s4">
              <img class="circle responsive-img" src="<%= restaurant.image_url %>">
            </div>
            <div class="col s8">
              <p class="no-margin"><%= restaurant.name %></p>
              <p class="no-margin">
                <span class="stars"><%= restaurant.rating %></span>
                (<%= display_review_count(restaurant.review_count) %>)
              </p>
              <p class="no-margin <%= restaurant.is_closed ? 'red-text' : 'green-text' %>">
                <%= restaurant.is_closed ? 'Closed' : 'Open' %>
              </p>
            </div>
          </div>
        </div>

        <div class="collapsible-body">
          <p><%= restaurant.address %> (<%= display_distance(restaurant.distance) %> away)</p>
        </div>
      </li>
  <% end %>
</ul>

<%= form_tag app_path, id: 'list-form' do %>
    <div class="center-align">
      <%= submit_tag 'Finish', class: 'btn red accent-2 col 8s', style: 'margin-bottom:25px' %>
    </div>
<% end %>
