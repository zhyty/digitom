<h1>Hello</h1>

<div id="alert" style="display:none"><%= flash[:alert] %></div>
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Create a group!</span>
      </div>
      <div class="card-action">
        <%= link_to 'Create', new_group_path, class: 'btn' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content ">
        <span class="card-title">Join a group!</span>
        <%= form_tag group_redirect_path do %>
            <%= text_field_tag :code, nil, placeholder: 'Enter group code here'%>
            <%= submit_tag 'Join Group!', class: 'btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
